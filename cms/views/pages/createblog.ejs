<!DOCTYPE html>
<html>

<%- include ('../templates/heading/htmlhead') -%>
<%- include ('../templates/heading/alertmanager') -%>
<%- include ('../templates/heading/standard_header') -%>

<br>
<br>

<body>

 <div class = "container">
  <div class = "content">
    
  <div class = "card">
	  <div class = "bg-light border-bottom-1 card-header">
	      <h3 class = "card-title"> Create a Blog </h3> 
	  </div>
	      <br>

	      <label for="title"> Title </label>
	      <input id="title"> </input>
	      <label for="blog_content"> Blog Content </label>
	      <textarea id="blog_content" rows="2" cols="10">
	      	Blog content here
	      </textarea>
	      <br>
	      <button id="submit" class="btn btn-primary">Submit</button>
  </div>
</div>
</div>
 
</body>
</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script type = "text/javascript">

jQuery(document).ready(function($){ 

  jQuery('#submit').click(function() {

    var blog = {
        title: jQuery('#title').val(),
        blog_content: jQuery('#blog_content').val()
      }

    jQuery.ajax({

      url: '/blog/create',
      type: 'POST',
      contentType: 'application/json',
      data: JSON.stringify(blog),
      success: function(data) {
        console.log(data);
        console.log('POST success');
      },
      error: function(req, err) {
        console.log('POST error');
      }

    });

  })

});

</script>

