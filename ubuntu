FROM ubuntu
MAINTAINER TH2 Alex

RUN mkdir -p /home/app/migration/
WORKDIR /home/app/migration

RUN apt-get update
RUN apt-get install -y postgresql
RUN apt-get install -y nodejs
RUN apt-get install -y npm
RUN apt-get install -y iputils-ping

RUN npm update
RUN npm install pg express --save -g db-migrate -g db-migrate-pg


ADD db-migrate-pg/database.json /home/app/cms/migration/database.json

#CMD ["/bin/echo", "test"]
